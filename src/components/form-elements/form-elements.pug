include ../toggle/toggle.pug
include ../field/field.pug
.form-elements
    a(href="/")
        img.first-logo(src = require("./images/first-logo.svg"), alt="first-logo")
    .form-elements__container
        .form-elements_left
            .form-elements__text-field
                +field('Email', 'Default')(class="area__input")
            .form-elements__text-field
                +field('This is pretty awesome', 'Hover / Focus')(class="area__input_active")
            .form-elements__dropdown-guest
                include ../dropdown/dropdown.pug
            .form-elements__masked-text-field
                +field('ДД.ММ.ГГ' ,'', 'Masked text field')(class="area__masked-text-field")
            .form-elements__date-dropdown
                .date
                    .date-dropdown
                        fieldset.area
                            legend.area__name Date dropdown
                        .area__body
                            span.material-icons expand_more
                            input.area__input-date-dropdown.mw150.js-cal-value_left(
                                type="text" 
                                placeholder="дд.мм.гг" 
                                autocomplete="off"
                                )
                    .date-dropdown
                        fieldset.area
                            legend.area__name Date dropdown
                        .area__body
                            span.material-icons expand_more
                            input.area__input-date-dropdown.mw150.js-cal-value_right(
                                type="text" 
                                placeholder="19.08.2019" 
                                autocomplete="off"
                                )
                    input(type="text").position-calendar.calendar-two
            .form-elements__filter-date-dropdown
                .mw266
                    label.area.area__name Filter date dropdown
                    .area__body
                        span.material-icons expand_more
                        input.area__input-filter-date-dropdown.position-input_small(
                            type="text" 
                            placeholder="19 авг - 23 авг" 
                            autocomplete="off"
                        )
            .form-elements__button
                fieldset.mw266
                    legend.area__name.area  Subscription text field
                    input.footer-up__input.position-input_small(
                    type="text" 
                    placeholder="Email" 
                    )
                    button(type="submit").footer-up__arrow
                        span.material-icons.material-icons_arrow arrow_forward  
            .form-elements__dropdown-default
                include ../dropdown-default/dropdown-default.pug
            .form-elements__dropdown-expanded
                .mw266
                    .area
                        label.area__name Dropdown
                        label.area__state Expanded
                    .area__body
                        span.material-icons expand_more
                        input.area__input-dropdown-default.position-input_small(
                            type="text"
                            placeholder="2 спальни, 2 кровати..."
                            autocomplete="off"
                            )
                    .area__block-list
                        .dropdown__block
                            .area__list-dropdown
                                ul 
                                    li Спальни
                                    li Кровати
                                    li Ванные комнаты 
                            .area__list-btn  
                                ul  
                                    li.area__list-btn_col
                                        button -
                                        span 2
                                        button +
                                    li.area__list-btn_col
                                        button -
                                        span 2
                                        button +
                                    li.area__list-btn_col
                                        button -
                                        span 2
                                        button +
            .form-elements__expandable-checkbox
                include ../expandable-checkbox/expandable-checkbox.pug
            .form-elements__expandable-checkbox-list
                .mw266.mb101
                    .area__body.mb17
                        label.area__name-expandable Expandable checkbox list
                        span.material-icons expand_less
                    ul.area__expandable-checkbox-list
                        li  
                            input#dch1(type="checkbox")
                            label(for="dch1") Завтрак
                        li  
                            input#dch2(type="checkbox" checked)
                            label(for="dch2") Письменный стол
                        li 
                            input#dch3(type="checkbox" checked)
                            label(for="dch3") Стул для кормления
                        li  
                            input#dch4(type="checkbox" checked)
                            label(for="dch4") Кроватка
                        li  
                            input#dch5(type="checkbox")
                            label(for="dch5") Телевизор
                        li  
                            input#dch6(type="checkbox")
                            label(for="dch6") Шампунь 
        .form-elements_middle 
            .form-elements__checkbox-buttons
                .area__body.mb15
                    label.area__name Checkbox Buttons
                ul.area__expandable-checkbox-list
                    li  
                        input#cb1(type="checkbox")
                        label(for="cb1") Можно курить
                    li  
                        input#cb2(type="checkbox" checked)
                        label(for="cb2") Можно с питомцами
                    li 
                        input#cb3(type="checkbox" checked)
                        label(for="cb3") Можно пригласить гостей <br> (до 10 человек)
            .form-elements__radio-buttons
                .area__body.mb14
                    label.area__name Radio Buttons
                ul.area__radio-buttons
                    li 
                        input#rb1(type="radio" name="rb" checked)
                        label(for="rb1") Мужчина 
                    li 
                        input#rb2(type="radio" name="rb")
                        label(for="rb2") Женщина 
            .form-elements__toggle
                +toggle("Toggle", "Получать спецпредложения")
            .form-elements__like-button
                include ../like-button/like-button.pug
            .form-elements__rate-button
                include ../rate-button/rate-button.pug
            .form-elements__dropdown
                .mw320
                    label.area.area__name Dropdown 
                    .area__body
                        span.material-icons expand_more
                        input.area__input-dropdown-default.position-input_large(
                            type="text"
                            placeholder="Сколько гостей"
                            autocomplete='off'
                            )
                    .area__block-list
                        .dropdown__block
                            .area__list-dropdown
                                ul 
                                    li Взрослые
                                    li Дети
                                    li Младенцы
                            .area__list-btn  
                                ul  
                                    li.area__list-btn_col
                                        button -
                                        span 0
                                        button +
                                    li.area__list-btn_col
                                        button -
                                        span 0
                                        button +
                                    li.area__list-btn_col
                                        button -
                                        span 0
                                        button +
                        .area__button
                            button Применить
            .form-elements__rich-checkbox-buttons
                .mw266
                    .area__body.mb15
                        label.area__name Rich checkbox buttons
                    ul.area__expandable-checkbox-list
                        li  
                            input#rc1(type="checkbox")
                            label(for="rc1") <span>Широкий коридор</span> <br>
                                p Ширина коридоров в номере <br> не менее 91 см.
                        li  
                            input#rc2(type="checkbox")
                            label(for="rc2") <span>Помощник для инвалидов</span><br> 
                                p На 1 этаже вас встретит специалист <br>и проводит до номера.
        .form-elements_right
            .form-elements__range-slider
                include ../range-slider/range-slider.pug
            .form-elements__buttons
                .mw266
                    legend.area__name.area.mb15 Buttons
                    .button
                        button.button-click.button-position click me
                        button.button-click_active click me
                        button.button-click-sec.button-position_sec click me
                        button.button-click-sec_active click me
                        button.button-click_th.mr20  click me
                        button.button-click_th_active click me
            .form-elements__button-pay 
                .button-pay
                    a(href="#").button-pay__link Перейти к оплате
                        span.material-icons.material-icons_white arrow_forward  
            .form-elements__pagination 
                include ../pagination/pagination.pug
            .form-elements__dropdown
                .mw320
                    label.area.area__name Dropdown 
                    .area__body
                        span.material-icons expand_more
                        input.area__input-dropdown-default.position-input_large(
                            type="text"
                            placeholder="3 гостя"
                            autocomplete='off'
                            )
                    .area__block-list  
                        .dropdown__block
                            .area__list-dropdown
                                ul 
                                    li Взрослые
                                    li Дети
                                    li Младенцы
                            .area__list-btn  
                                ul  
                                    li.area__list-btn_col
                                        button -
                                        span 2
                                        button +
                                    li.area__list-btn_col
                                        button -
                                        span 1
                                        button +
                                    li.area__list-btn_col
                                        button -
                                        span 0
                                        button +
                        .area__button
                            button Применить
